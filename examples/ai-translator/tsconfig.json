{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "ai-translator": ["../../packages/ai-translator/src"]
    },
    "types": ["vite/client"]
  },
  "include": ["src/**/*", "src/**/*.d.ts"],
  "references": [{ "path": "../../packages/ai-translator" }]
}
